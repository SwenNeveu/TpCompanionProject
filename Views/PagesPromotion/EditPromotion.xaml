<Page x:Class="TpCompanionProject.Views.PagesPromotion.EditPromotion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpCompanionProject.Views.PagesPromotion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPromotion">
    <Grid Grid.ColumnSpan="1" Grid.Column="3" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Nom:" Width="Auto" HorizontalAlignment="Right"/>
            <TextBox x:Name="PromoNom" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch" Style="{StaticResource SimpleTextBoxStyle}"/>
        <Button Content="Accept" x:Name="AcceptButton" Click="AcceptButton_Click" Grid.Column="2" Width="Auto" Style="{StaticResource ValidationButtonStyle}"/>
        </Grid>
</Page>
