<Page x:Class="TpCompanionProject.Views.PagesPromotion.AddEleve"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpCompanionProject.Views.PagesPromotion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEleve">

    <Grid>
        <StackPanel>
            <TextBlock Text="Nom:"/>
            <TextBox x:Name="txtNom" Style="{StaticResource SimpleTextBoxStyle}"/>
            <TextBlock Text="Prenom:"/>
            <TextBox x:Name="txtPrenom" Style="{StaticResource SimpleTextBoxStyle}"/>
            <Button Content="Accept" x:Name="AcceptButton" Click="AcceptButton_Click" Style="{StaticResource ValidationButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
