<Page x:Class="TpCompanionProject.Views.PagesPromotion.PageEditPromotion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TpCompanionProject.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Title="PageEditPromotion">

  <Grid>
    <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Label Content="Nom:" Width="Auto"/>
            <TextBox x:Name="PromoNom" Grid.Column="1" Width="Auto" Style="{StaticResource SimpleTextBoxStyle}"/>
      <Button Content="Accept" x:Name="AcceptButton" Click="AcceptButton_Click" Grid.Column="2" Width="Auto"/>
    </StackPanel>
  </Grid>
</Page> 
